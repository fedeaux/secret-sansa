    = f.label :category
    = f.text_field :category
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :state
    = f.text_field :state
  .field
    = f.label :cep
    = f.text_field :cep
  .field
    = f.label :cnpj
    = f.text_field :cnpj
